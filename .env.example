# Django Configuration
# Para producción, copia este archivo como .env y configura los valores apropiados

# SECRET KEY - IMPORTANTE: Cambiar en producción
# Generar nueva clave con: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
DJANGO_SECRET_KEY=tu-clave-secreta-aqui

# DEBUG - Usar False en producción
DJANGO_DEBUG=True

# ALLOWED HOSTS - Agregar tus dominios separados por comas
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration (si usas PostgreSQL o MySQL)
# DATABASE_URL=postgresql://user:password@localhost/dbname
# o
# DATABASE_URL=mysql://user:password@localhost/dbname

# Celery Configuration (opcional - solo si usas procesamiento asíncrono)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Email Configuration (opcional)
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=tu-email@gmail.com
# EMAIL_HOST_PASSWORD=tu-password
# DEFAULT_FROM_EMAIL=noreply@tudominio.com

# AWS S3 Configuration (opcional - para almacenamiento en la nube)
# AWS_ACCESS_KEY_ID=tu-access-key
# AWS_SECRET_ACCESS_KEY=tu-secret-key
# AWS_STORAGE_BUCKET_NAME=tu-bucket
